@{
    ViewData["Title"] = "Players - Игрок";
}
<nav aria-label="breadcrumbc">
  <ol class="breadcrumb p-0 bg-white">
    <li class="breadcrumb-item"><a href="~/Home">Главная</a></li>
    <li class="breadcrumb-item"><a href="~/Home/Players">Игроки</a></li>
    <li class="breadcrumb-item active" aria-current="page">Карточка</li>
  </ol>
</nav>
<div>
    <div class="card-body p-0">
        <div class="form-group row">
            <div class="col-sm-2">
                Email
            </div>
            <div class="col-sm-4">
               <b>@ViewBag.player.Email</b> 
            </div>
            <div class="col-sm-2">
                Дата Регистрации
            </div>
            <div class="col-sm-4">
               @ViewBag.player.RegDate2Str()
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                &nbsp;
            </div>
            <div class="col-sm-2">
                Блокировка
            </div>
            <div class="col-sm-4">
                @ViewBag.player.Blocked2Str()
            </div>
        </div>
    </div>
</div>

<div class="pt-3">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="width: 150px;">Код</th>
                <th>Металл</th>
                <th>Баланс</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.list != null)
            {
                foreach (CurrencyClass c in ViewBag.list)
                {
                    <tr>
                        <td>@c.Code</td>
                        <td>@c.Description</td>
                        <td>
                           @Html.ActionLink(c.Amount.ToString(), "Details", "Home", new { @id = ViewBag.player.id, @c = c.Code })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        Нулевой баланс
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
